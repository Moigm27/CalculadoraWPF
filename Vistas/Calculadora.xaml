        <Button x:Name="btn_9" Content="9" HorizontalAlignment="Left" Margin="282,130,0,0" VerticalAlignment="Top" Width="50" Height="50"/>
        <Button x:Name="btn_multiplicar" Content="X" HorizontalAlignment="Left" Margin="361,132,0,0" VerticalAlignment="Top" Height="50" Width="50" Grid.ColumnSpan="2"/>
        <Button x:Name="btn_B" Content="B" HorizontalAlignment="Left" Margin="40,62,0,0" VerticalAlignment="Top" Height="50" Width="50"/>
        <Button x:Name="btn_abrirP" Content="(" HorizontalAlignment="Left" Margin="120,62,0,0" VerticalAlignment="Top" Height="50" Width="50"/>
