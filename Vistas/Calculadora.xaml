        <Button x:Name="btn_5" Content="5" HorizontalAlignment="Left" VerticalAlignment="Top" Height="50" Width="50" Margin="200,201,0,0"/>
        <Button x:Name="btn_3" Content="3" HorizontalAlignment="Left" Margin="282,273,0,0" VerticalAlignment="Top" Height="50" Width="50"/>
        <Button x:Name="btn_6" Content="6" HorizontalAlignment="Left" Margin="282,201,0,0" VerticalAlignment="Top" Height="50" Width="50"/>
        <Button x:Name="btn_sumar" Content="+" HorizontalAlignment="Left" Margin="361,273,0,0" VerticalAlignment="Top" Height="50" Width="50" Grid.ColumnSpan="2"/>
        <Button x:Name="btn_restar" Content="-" HorizontalAlignment="Left" Margin="361,201,0,0" VerticalAlignment="Top" Height="50" Width="50" Grid.ColumnSpan="2"/>
        <Button x:Name="btn_c" Content="C" HorizontalAlignment="Left" Margin="40,130,0,0" VerticalAlignment="Top" Height="50" Width="50"/>
        <Button x:Name="btn_7" Content="7" HorizontalAlignment="Left" Margin="120,130,0,0" VerticalAlignment="Top" Height="50" Width="50"/>
