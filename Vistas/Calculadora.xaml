        <Button x:Name="btn_0" Content="0" HorizontalAlignment="Left" Margin="200,344,0,0" VerticalAlignment="Top" Height="50" Width="50"/>
        <Button x:Name="btn_decimales" Content="," HorizontalAlignment="Left" Margin="282,344,0,0" VerticalAlignment="Top" Height="50" Width="50"/>
        <Button x:Name="btn_igual" Content="=" HorizontalAlignment="Left" Margin="361,344,0,0" VerticalAlignment="Top" Height="50" Width="50" Grid.ColumnSpan="2"/>
        <Button x:Name="btn_2" Content="2" HorizontalAlignment="Left" Margin="200,273,0,0" VerticalAlignment="Top" Height="50" Width="50"/>
