        <Button x:Name="btn_izq" Content="&lt;&lt;" HorizontalAlignment="Left" Margin="120,-11,0,0" VerticalAlignment="Top" Height="50" Width="50"/>
        <Button x:Name="btn_der" Content=">>" HorizontalAlignment="Left" Margin="200,-11,0,0" VerticalAlignment="Top" Height="50" Width="50"/>
        <Button x:Name="btn_limpiar" Content="CE" HorizontalAlignment="Left" Margin="282,-11,0,0" VerticalAlignment="Top" Height="50" Width="50"/>
        <Button x:Name="btn_eliminar" Content="Delete" HorizontalAlignment="Left" Margin="361,-11,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2" Height="50" Width="50"/>

