<Window x:Class="CalculadoraWPF.Vistas.Calculadora"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CalculadoraWPF.Vistas"
        mc:Ignorable="d"
        Title="Calculadora" Height="590" Width="451">
    <Grid Margin="0,158,0,19">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="381*"/>
            <ColumnDefinition Width="70*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="btn_F" Content="F" HorizontalAlignment="Left" Margin="40,343,0,0" VerticalAlignment="Top" Height="50" Width="50"/>
